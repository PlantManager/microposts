<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

  <%= render(:partial => "followlist") %>
  </aside>

  <div class="col-md-8">
    <ol class="follow">
      <% if @followed.any? %>
        <% @followed.each do |followed| %>
          <li><%= gravatar_for followed, size: 50 %>
              <span class="user"><%= link_to followed.name, followed %></span>
          </li>
        <% end %>
      <% else %>
          <li>フォロワーはいません</li>
      <% end %>
    </ol>
  </div>

</div>

