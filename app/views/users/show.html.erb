<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user.following_users.any? %>
      <h3><%= @user.following_users.count %> following</h3>
      
 <!--       < @user.following_users(params[:name]).each do |n| %>
          <p> n.name %></p>
          
         end %>
-->
        <%= @following.each do |n| %>
        <p> <%= n.name %></p>
        <% end %>
        
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      

      
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<hr>
